enum TiposLocal {
  CANTEIROS_CENTRAIS_E_LATERAIS_DE_PORTE                          @map("Canteiros Centrais e Laterais de Porte")
  CANTOS_DE_QUADRA                                                @map("Cantos de Quadra")
